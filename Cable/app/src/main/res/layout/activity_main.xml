<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    tools:context=".Main"
    tools:ignore="NamespaceTypo">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            style="?android:borderlessButtonStyle"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="272dp"
            android:onClick="berechnungKabel"
            app:srcCompat="@drawable/ovalkabel"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="Kabeldimensionierung"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            style="?android:borderlessButtonStyle"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:onClick="berrechnungSicherungIntent"
            app:srcCompat="@drawable/ovalsicherung"
            android:layout_alignTop="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:text="Sicherungsberrechnung"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/button"
            android:background="@drawable/roundedbutton"
            android:onClick="converterWatToAmp"
            android:text="Watt 2 Ampere"
            android:textColor="@color/textCoolor" />

        <Button
            android:id="@+id/button"
            android:layout_width="349dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/roundedbutton"
            android:onClick="impressumBtn"
            android:text="Impressum"
            android:textColor="@color/textCoolor" />


    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>